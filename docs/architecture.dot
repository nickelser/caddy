  edge [fontname="Helvetica Neue"]
  peripheries=0
  rankdir="LR"
  subgraph clusterClient {
    bgcolor="#d0c0a0"
    fontsize=16
    label="Client"
    Browser
  }
  subgraph clusterServer {
    bgcolor="#d0c0a0"
    fontsize=16
    label="Server"
