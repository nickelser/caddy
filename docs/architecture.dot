      bgcolor="#b02b2c"
      label="Ruby Process"
      App
      subgraph clusterCaddy {
        bgcolor="#b02b2c"
        label=""
        Caddy
      }
    }
    "Etc."
    Database
    "Slow Service"
  }
  Browser -> App [dir="both"]
  App -> Caddy [dir="both"]
  Caddy -> Database [label="Async Refresh", style="dotted", dir="both"]
